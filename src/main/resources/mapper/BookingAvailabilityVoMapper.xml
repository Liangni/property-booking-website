<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.penny.dao.BookingAvailabilityVoMapper">
    <resultMap id="BaseResultMap" type="com.penny.vo.BookingAvailabilityVo">
        <id column="booking_availability_id" jdbcType="BIGINT" property="bookingAvailabilityId" />
        <result column="booking_availability_status" jdbcType="VARCHAR" property="bookingAvailabilityStatus" />
        <result column="booking_availability_date" jdbcType="DATE" property="bookingAvailabilityDate" />
        <result column="property_id" jdbcType="BIGINT" property="propertyId" />
    </resultMap>
    <sql id="Base_Column_List">
        booking_availability_id, booking_availability_status, booking_availability_date,
    property_id
    </sql>
    <select id="listByPropertyId" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from booking_availability
        where property_id = #{propertyId,jdbcType=BIGINT}
    </select>

    <select id="listByStartAndEndDate" parameterType="java.util.Map" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from booking_availability
        where property_id = #{propertyId,jdbcType=BIGINT}
            and
            booking_availability_date >= #{startDate}
            and
            booking_availability_date &lt;= #{endDate};
    </select>

    <update id="setStatusToBookingByPrimaryKeyList" parameterType="java.util.List">
        update booking_availability
        <set>
            booking_availability_status = 'booked'
        </set>
        where booking_availability_id in
        <foreach collection="bookingAvailabilityIdList" item="bookingAvailabilityId" open="(" separator="," close=")">
            #{bookingAvailabilityId, jdbcType=BIGINT}
        </foreach>
        and
            booking_availability_status = 'available'
    </update>
</mapper>